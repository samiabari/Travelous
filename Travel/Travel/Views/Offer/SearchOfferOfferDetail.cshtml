            @if (Model.OfferPictureData != null)
            {
                <img src="data:image;base64,@System.Convert.ToBase64String(Model.OfferPictureData)" class="img-fluid" alt="@Model.OfferName" style="margin-top:10px;width:700px;height:450px;margin:10px;">
